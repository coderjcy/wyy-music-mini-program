<wxs src='/utils/format.wxs' module='fmt'></wxs>

<view class='video-item' bindtap="videoItemClick">
  <image class="img" mode="widthFix" src="{{videoInfo.cover}}">
  <view class="count">
    <view class="playCount">
      {{fmt.formatCount(videoInfo.playCount)}}
    </view>
    <view class="duration">
      {{fmt.formatTime(videoInfo.mv.videos[0].duration)}}
    </view>
  </view>
  </image>
  <view class="name">{{videoInfo.name}}-{{videoInfo.artistName}}</view>

</view>