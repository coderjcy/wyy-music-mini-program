.ranking{
  margin-bottom: 30rpx;
  display: flex;
  justify-content: space-between;
  align-items: start;
  border-radius: 10rpx;
  overflow: hidden;
}
.song-info{
  flex: 1;
  padding: 20rpx;
  height: 220rpx;
  box-sizing: border-box;
  background-color: #f0f0f0;
  color: #333;
}
.title{
  margin-bottom: 10rpx;
  color: #000;
  font-size: 32rpx;
}
.song-name{
  font-size:28rpx;
}
.artist{
  color:#666;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
.index{
  display: inline-block;
  width: 25rpx;
  text-align: center;
}
.img{
  position: relative;
  width: 220rpx;
  height: 220rpx;
}
.play-count{
  position: absolute;
  bottom:0;
  right:0;
  color: #fff;
  font-size: 22rpx;
  padding: 3rpx 10rpx;
  background-color: #0005;
  border-radius: 6rpx;
}